---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import SocialMediaButtons from "../components/SocialMediaButtons.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import EmailIcon from "../components/icons/EmailIcon.astro";
import Projects from "../components/Projects.astro";
import Code from "../components/icons/CodeIcon.astro";
import EducationIcon from "../components/icons/EducationIcon.astro";
import Education from "../components/Education.astro";
---

<Layout
	title="Portfolio Pisani Valentin - Web Developer"
	description="Contact Pisani Valentin to create your web application."
>
	<main>
		<section
			class="flex flex-col items-center w-full justify-center mx-auto lg:w-[740px] py-20"
		>
			<h1
				class="font-bold text-3xl md:text-5xl flex flex-col md:flex-row md:gap-x-4 md:pb-4"
			>
				Hi! I'm Valentin Pisani <div
					class="flex justify-center items-center"
				>
					<Badge>Ready to work.</Badge>
				</div>
			</h1>
			<h2 class="text-xl opacity-80 w-9/12">
				Systems Engineering Student. I'm a Web Developer. From
				<span class=" text-purple-700 dark:text-cyan-200">Buenos Aires, Argentina.</span>
			</h2>
			<ul
				class="flex flex-col w-3/4 gap-y-4 items-center justify-center md:flex-row md:gap-x-24 md:justify-evenly pt-4"
			>
				<li>
					<SocialMediaButtons
						href="https://www.linkedin.com/in/valentin-pisani/"
					>
						<LinkedInIcon class="size-6" />
						LinkedIn
					</SocialMediaButtons>
				</li>
				<li>
					<SocialMediaButtons
						href="https://github.com/PisaniValentin"
					>
						<GitHubIcon class="size-6" />
						GitHub
					</SocialMediaButtons>
				</li>
				<li>
					<SocialMediaButtons
						href="mailto:valentin.pisani@hotmail.com"
					>
						<EmailIcon class="size-6" />
						valentin.pisani@hotmail.com
					</SocialMediaButtons>
				</li>
			</ul>
		</section>
		<section>
			<h2 class="flex text-2xl pl-10 items-center md:text-4xl md:pb-5">
				<Code class="md:size-10" />Projects
			</h2>
			<Projects />
		</section>
		<section>
			<h2 class="flex text-2xl pl-10 md:text-4xl pb-5 items-center">
				<EducationIcon class="sm:size-8" />
				Education
			</h2>
			<Education />
		</section>
	</main>
</Layout>
